{
  "dependencies": {
    "@types/express": "^4.11.0",
    "@types/jest": "^22.1.1",
    "@types/node": "^9.4.0",
    "express": "^4.16.2",
    "jest": "^22.1.4",
    "nodemon": "^1.14.12",
    "ts-jest": "^22.0.2",
    "ts-node": "^4.1.0",
    "typescript": "^2.7.1"
  },
  "scripts": {
    "start": "nodemon yarn run dev",
    "dev": "ts-node src/index.ts",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
